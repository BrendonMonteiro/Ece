  document.addEventListener("contextmenu", (e) => e.preventDefault()); 
document.addEventListener("keydown", (e) => {
    if (e.ctrlKey && (e.key === "u" || e.key === "U" || e.key === "s" || e.key === "S")) {
        e.preventDefault();
    }
    if (e.keyCode === 123) { // F12
        e.preventDefault();
    }
});
</script>
<script>
  document.addEventListener("keydown", function(event) {
    if (event.ctrlKey && event.shiftKey && event.key === "I") {
      event.preventDefault();
      alert("Opa! Acho que você não precisa disso... :D");
    }
  });
</script>

<script>
let activeField = null; // Armazena o campo ativo

function toggleFields() {
    const tipo = document.querySelector('select[name="tipo_ouvi"]').value;
    const descricao = document.getElementById('descricao');
    const descricaoAtual = document.getElementById('descricaoatual');
    const tituloouv = document.getElementById('tituloouv');
    const autor = document.getElementById('nick_name');
    const consi = document.getElementById('comentariosouv');
    const bbcodeControls = document.getElementById('bbcode-controls');

    if (tipo === "Projeto") {
        autor.placeholder = "Seu nickname";
        autor.required = true;
        autor.style.display = "block";
        consi.required = true;
        consi.style.display = "block";
        descricao.placeholder = "Proposta";
        descricao.required = true;
        descricao.style.display = "block";
        tituloouv.required = true;
        tituloouv.style.display = "block";
        descricaoAtual.required = false;
        descricaoAtual.style.display = "none";
        bbcodeControls.style.display = "block"; 
    } else if (tipo === "Correção" || tipo === "Sugestão") {
        autor.placeholder = "Seu nickname";
        autor.required = true;
        autor.style.display = "block";
        descricao.placeholder = "Trecho Atual";
        descricao.required = true;
        consi.required = true;
        consi.style.display = "block";
        descricaoAtual.required = true;
        tituloouv.required = true;
        tituloouv.style.display = "block";
        descricao.style.display = "block";
        descricaoAtual.style.display = "block";
        bbcodeControls.style.display = "block"; 
    } else {
        descricao.required = false;
        descricaoAtual.required = false;
        consi.style.display = "none";
        descricao.style.display = "none";
        tituloouv.style.display = "none";
        descricaoAtual.style.display = "none";
        bbcodeControls.style.display = "none"; 
        activeField = null; 
    }
}

// Atualizar o campo ativo quando o usuário clicar em um campo de entrada
document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll("textarea, input").forEach(field => {
        field.addEventListener("focus", () => {
            activeField = field;
        });
    });

    document.getElementById('nick_name').style.display = "none";
    document.getElementById('descricao').style.display = "none";
    document.getElementById('descricaoatual').style.display = "none";
    document.getElementById('tituloouv').style.display = "none";
    document.getElementById('comentariosouv').style.display = "none";
});

// Função para aplicar BBCode no campo ativo
function applyBBCode(style) {
    if (!activeField) return; // Se nenhum campo estiver ativo, não faz nada

    let selectionStart = activeField.selectionStart;
    let selectionEnd = activeField.selectionEnd;
    let text = activeField.value;

    let bbcodeStart = `[${style}]`;
    let bbcodeEnd = `[/${style}]`;

    activeField.value = text.substring(0, selectionStart) + bbcodeStart + 
                        text.substring(selectionStart, selectionEnd) + 
                        bbcodeEnd + text.substring(selectionEnd);
}

// Função para aplicar cor selecionada no campo ativo
function applyColorBBCode() {
    if (!activeField) return; // Se nenhum campo estiver ativo, não faz nada

    const color = document.getElementById('color-picker').value;
    let selectionStart = activeField.selectionStart;
    let selectionEnd = activeField.selectionEnd;
    let text = activeField.value;

    let bbcodeStart = `[color=${color}]`;
    let bbcodeEnd = `[/color]`;

    activeField.value = text.substring(0, selectionStart) + bbcodeStart + 
                        text.substring(selectionStart, selectionEnd) + 
                        bbcodeEnd + text.substring(selectionEnd);
}

</script>
<script>
  // Função para formatar a data no formato "dd/mm/yyyy HH:MM:SS"
  function formatDate(date) {
    const day = String(date.getDate()).padStart(2, '0');
    const month = String(date.getMonth() + 1).padStart(2, '0'); // Mês começa do zero
    const year = date.getFullYear();
    const hours = String(date.getHours()).padStart(2, '0');
    const minutes = String(date.getMinutes()).padStart(2, '0');
    const seconds = String(date.getSeconds()).padStart(2, '0');
    return `${day}/${month}/${year} ${hours}:${minutes}:${seconds}`;
  }

  // Preencher o campo invisível com a data e hora formatada
  document.getElementById('data').value = formatDate(new Date());
</script>
<script>
    // Função para fechar o pop-up de informações
    function closePopupInfo() {
        const popup = document.getElementById('popup-info');
        popup.classList.remove('show'); // Remove visibilidade
        popup.classList.add('hide'); // Adiciona o efeito de deslizar para fora
        setTimeout(() => {
            popup.style.display = 'none'; // Remove completamente após a transição
        }, 800); // Tempo igual ao da transição no CSS
    }

    // Função para exibir o pop-up de informações com efeito
    function showPopup() {
        const popup = document.getElementById('popup-info');
        popup.classList.add('show');
    }

    // Exibe o pop-up automaticamente após o carregamento da página
    document.addEventListener('DOMContentLoaded', () => {
        const popup = document.getElementById('popup-info');
        popup.style.display = 'block'; // Garante que o pop-up esteja visível no DOM
        setTimeout(showPopup, 2000); // Leve atraso para ativar a transição
    });

    // Função de fechamento para o pop-up de sucesso
    function closePopup3() {
        document.querySelector(".overlay").style.display = "none";
        document.getElementById("successPopup3").style.display = "none";
  
        // Redireciona para a página de relatórios
        window.location.href =
            "https://docs.google.com/spreadsheets/d/1UsVfRjdZoqupZIgLZfKniVHMimDbo3CIAAtkYKl8TJk/edit?gid=1076640812#gid=1076640812";
    }

    // Função para mostrar o pop-up de sucesso
    function showSuccessPopup3() {
        // Simula tempo de envio antes de reativar o botão
        setTimeout(() => {
            document.querySelector(".overlay").style.display = "block";
            document.getElementById("successPopup3").style.display = "block";
        }, 1000);
    }

    // Função genérica para enviar formulários
    function submitForm(formId) {
        const botao = document.querySelector(`#${formId} button[type='submit']`);
        botao.textContent = "Enviando...";
        botao.disabled = true;

        let formData = $(`#${formId} form`).serializeArray();
        let processedData = processFields(formData);

        $.ajax({
            url: "https://api.apispreadsheets.com/data/ieG2Lehvzw2GMfN8/",
            type: "post",
            data: processedData,
            success: function(response) {
                console.log("Formulário enviado com sucesso!", response);
                showSuccessPopup3();
            },
            error: function(xhr, status, error) {
                console.error("Erro ao enviar formulário:", error);
                botao.textContent = "Enviar";
                botao.disabled = false;
                alert("Erro ao enviar o formulário. Tente novamente.");
            }
        });
    }

    // Funções específicas para enviar os formulários
    function submitForm1() { submitForm("form1"); }

    // Função para processar os campos do formulário (placeholder, ajuste conforme necessário)
    function processFields(data) {
        // Aqui você pode realizar qualquer processamento necessário nos dados antes de enviá-los
        return data;
    }
</script> 

<script>
    let activeForm = null;
  let currentIndex = 0;
  const buttons = document.querySelectorAll(".button");
  const totalButtons = buttons.length;

  document.addEventListener("DOMContentLoaded", () => {
    const credits = document.querySelector(".credits");
    setTimeout(() => {
      credits.classList.add("show");
    }, 500); // Pequeno atraso para permitir a transição
  });

  function toggleForm(formId) {
    const newForm = document.getElementById(formId);
    const body = document.body;

    if (activeForm && activeForm !== newForm) {
      activeForm.style.display = "none";
      activeForm.classList.remove("active");
    }

    newForm.style.display = "flex";
    setTimeout(() => {
      newForm.classList.add("active");
      newForm.style.display = "block";
    }, 10); // Pequeno atraso para permitir a transição
    activeForm = newForm;
    body.classList.add("scrollable");
  }

  toggleForm("form1");

  </script>
  <script>
    document.querySelectorAll("form").forEach(form => {
        form.addEventListener("submit", function(event) {
            // Evita o envio imediato do formulário para ver o efeito
            event.preventDefault();
            
            // Seleciona o botão de envio dentro do formulário atual
            const botao = form.querySelector("button[type='submit']");
            botao.textContent = "Enviando...";
            botao.disabled = true;

            // Simula um tempo de espera ou envio
            setTimeout(() => {
                botao.textContent = "Enviado!";
            }, 2000); // 2000ms para exemplo; remova o setTimeout no uso real
        });
    });
</script>

